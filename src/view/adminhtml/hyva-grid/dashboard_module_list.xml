<?xml version="1.0"?>
<grid xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Hyva_Admin:etc/hyva-grid.xsd">
    <source>
        <arrayProvider>\Firegento\DevDashboard\ViewModel\Widget\ModuleList</arrayProvider>
    </source>
    <navigation>
        <filters>
            <filter column="type">
                <option label="Core">
                    <value>Core</value>
                </option>
                <option label="External">
                    <value>External</value>
                </option>
            </filter>
        </filters>
        <pager>
            <pageSizes>50,100,200</pageSizes>
            <defaultPageSize>100</defaultPageSize>
        </pager>
    </navigation>
</grid>
