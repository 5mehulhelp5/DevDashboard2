<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="devdashboard.header" template="Firegento_DevDashboard::header.phtml"/>
            <container name="devdashboard.widgets" htmlClass="devdashboard_developer_widgets" htmlTag="div">
                <block name="devdashboard.phpversion" template="Firegento_DevDashboard::widgets/php_version.phtml">
                    <arguments>
                        <argument name="viewModel" xsi:type="object">Firegento\DevDashboard\ViewModel\Widget\PhpVersion</argument>
                    </arguments>
                </block>
                <block name="devdashboard.deployMode" template="Firegento_DevDashboard::widgets/deploy_mode.phtml">
                    <arguments>
                        <argument name="viewModel" xsi:type="object">Firegento\DevDashboard\ViewModel\Widget\DeployMode</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
